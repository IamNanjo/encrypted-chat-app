generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id               String    @id @default(uuid())
  username         String    @unique
  password         String
  created          DateTime  @default(now())
  devices          Device[]
  chats            Chat[]    @relation("ChatMembers")
  sentMessages     Message[] @relation("MessagesFrom")
  receivedMessages Message[] @relation("MessagesTo")
}

model Device {
  id       String    @id @default(uuid())
  name     String
  key      String
  created  DateTime  @default(now())
  lastUsed DateTime  @default(now())
  user     User      @relation(fields: [id], references: [id])
  Message  Message[]
}

model Chat {
  id      String    @id @default(uuid())
  created DateTime  @default(now())
  members User[]    @relation("ChatMembers")
  Message Message[]
}

model Message {
  id       String   @id @default(uuid())
  deviceId String
  content  String
  created  DateTime @default(now())
  device   Device   @relation(fields: [deviceId], references: [id])
  chat     Chat     @relation(fields: [id], references: [id])
  from     User     @relation(fields: [id], references: [id], name: "MessagesFrom")
  to       User     @relation(fields: [id], references: [id], name: "MessagesTo")
}
